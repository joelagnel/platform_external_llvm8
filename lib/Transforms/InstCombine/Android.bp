tblgen_includes = " -I external/bpftrace/llvm8/include"

generated_headers = [
    "llvm8_lib_Transforms_InstCompine_InstCombineTables_inc",
]

genrule {
    name: "llvm8_lib_Transforms_InstCompine_InstCombineTables_inc",
    srcs: ["InstCombineTables.td"],
    cmd: "$(location llvm8_tblgen) -gen-searchable-tables $(in) -o $(out)" + tblgen_includes,
    out: ["InstCombineTables.inc"],
    tools: ["llvm8_tblgen"],
}

cc_library_static {
    name: "llvm8_lib_Transforms_InstCombine",
    defaults: ["llvm8_defaults"],
    generated_headers: generated_headers,
    srcs: ["*.cpp"],
}
